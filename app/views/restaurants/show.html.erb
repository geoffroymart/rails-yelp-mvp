<div class= "col-sm-6 col-sm-offset-3">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= "Category: #{@restaurant.category}" %></p>
  <h3>Reviews</h3>
  <div>
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <div>
            <li><%= "#{review.content} (#{review.rating}*)" %></li>
        </div>
      <% end %>
    </ul>
    <%= link_to "+ Add review", new_restaurant_review_path(@restaurant.id) %>
  </div>
  <br>
  <div>
    <%= link_to "Back to list", restaurants_path, class: "btn btn-warning" %>
    <%= link_to "Edit", edit_restaurant_path, class: "btn btn-primary" %>
    <%= link_to "Delete",  restaurant_path,  method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>

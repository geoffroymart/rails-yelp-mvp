<div class= "col-sm-6 col-sm-offset-3">
  <h1><%= "#{ @restaurant.new_record?() ? 'Add a new restaurant' : "Edit the restaurant: #{@restaurant.name}" }" %></h1>
  <div class="container col-sm-12">
    <%= simple_form_for(@restaurant) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
      </div>
      <%= link_to "Back", "#{ @restaurant.new_record?() ? restaurants_path : restaurant_path }", class: "btn btn-warning" %>
      <%= f.submit class: "btn btn-success" %>
    <% end %>
  </div>
</div>

<div class= "col-sm-6 col-sm-offset-3">
  <h1><%= "#{ @review.new_record?() ? 'Add a new review' : "Edit the review: #{@review.content}" }" %></h1>
  <div class="container col-sm-12">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <div class="form-group">
        <%= f.input :content, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
      </div>
      <%= link_to "Back", restaurant_path(@restaurant.id), class: "btn btn-warning" %>
      <%= f.submit class: "btn btn-success" %>
    <% end %>
  </div>
</div>
